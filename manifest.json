{
  "manifest_version": 3,
  "name": "Job AutoFiller Extension",
  "version": "1.0",
  "description": "Upload resumes, get job description suggestions, and autofill applications.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://example-backend.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
